<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageViewArchivoPhoto"
                android:src="@drawable/ic_launcher_background"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewNombreArchivo"
                android:text="Nombre del archivo"
                android:paddingLeft="120dp"
                android:paddingRight="5dp"
                android:paddingTop="25dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n del archivo"
                android:paddingLeft="125dp"
                android:id="@+id/textViewDescArchivo"
                android:paddingRight="5dp"
                android:paddingTop="50dp"
                android:textSize="15sp"
                android:textColor="#808B96"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600MB"
                android:paddingLeft="125dp"
                android:id="@+id/textViewTamArchivo"
                android:paddingRight="5dp"
                android:paddingTop="65dp"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#808B96"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="1sp"
                android:id="@+id/textViewIdIglesia"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="330dp"/>

        </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>